<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_monitor_bg">

    <Button
        android:id="@+id/bt_choose_supervisor"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/dont_play_choose_supervisor"
        android:background="@drawable/selector_choose_supervisor_button"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/bt_choose_supervisor"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/tv_cancel_monitor"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/dont_play_cancel_monitor"
            android:background="@drawable/selector_cancel_text_view"/>

        <TextView
            android:id="@+id/tv_commit_monitor"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/dont_play_commit_monitor"
            android:background="@drawable/selector_commit_text_view"/>

    </LinearLayout>

</RelativeLayout>